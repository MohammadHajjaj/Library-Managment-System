<div class="backdrop">
    <div id="popup-login" class="mt-5">
        <div class="wrapper fadeInDown">
            <div id="formContent">

                <div class="fadeIn first">
                    <img src="https://i.pinimg.com/236x/44/a3/fd/44a3fd7c72db93b9e50d95f67c35792a--library-logo-school-logo.jpg"
                        id="icon" alt="User Icon" />
                </div>


                <form action="/login" method="POST" class="needs-validation" novalidate>
                    <input type="text" id="login" class="fadeIn second form-check-input" name="username"
                        placeholder="Username" required>
                    <input type="password" id="password" class="fadeIn third form-check-input" name="password"
                        placeholder="Password" required>
                    <input type="submit" class="fadeIn fourth" value="Log In">
                    <input type="button" class="fadeIn fourth" data-bs-toggle="modal"
                        data-bs-target="#ResetPasswordModal" value="forgot password ?">
                    <div id="popdiv">
                        <a class="fas fa-times" href="#" id="Close-login"></a>
                    </div>
                </form>
                <p>test user account :
                    test@test.com 123
                </p>
                <p>
                    test admin account : admin@admin.com 123
                </p>

            </div>

        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="backdrop2">

            <div class="mt-5">
                <div class="wrapper fadeInDown">
                    <div id="formContent">

                        <div class="fadeIn first">
                            <img src="https://i.pinimg.com/236x/44/a3/fd/44a3fd7c72db93b9e50d95f67c35792a--library-logo-school-logo.jpg"
                                width="206px" height="162px" id="icon" alt="User Icon" />
                        </div>
                        <form action="/register" method="POST" class="needs-validation" novalidate>

                            <input type="text" id="username" class="fadeIn second form-check-input"
                                name="users[username]" placeholder="Username" required>

                            <input type="text" id="email" class="fadeIn second form-check-input" name="users[email]"
                                placeholder="Email" required>

                            <input type="password" id="password" class="fadeIn second form-check-input"
                                name="users[password]" placeholder="Password" required>

                            <div class="row g-0">

                                <div class="col-6">
                                    <input type="text" id="firstname" class="fadeIn second form-check-input"
                                        name="users[fName]" placeholder="First name" required>
                                </div>
                                <div class="col-6">
                                    <input type="text" id="Last-name" class="fadeIn second form-check-input"
                                        name="users[lName]" placeholder="Last name" required>
                                </div>
                            </div>
                            <input type="text" id="phoneNumber" class="fadeIn second form-check-input"
                                name="users[phoneNumber]" placeholder="Phone Number" required>
                            <div id="formFooter" class="mt-2">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
                                <label class="form-check-label" for="exampleCheck1">Accept all terms and
                                    conditions.</label>
                            </div>
                            <input type="submit" class="fadeIn fourth mt-3" value="signup">
                            <div id="popdiv">
                                <a class="fas fa-times" href="#" id="Close-register"></a>
                            </div>
                        </form>




                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="ResetPasswordModal">
    <div class="modal-dialog modal-lg bg-dark">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="passwordModalLabel">
                    Edit Password
                </h5>
                <button class="btn-close" data-bs-dismiss="modal"><span></span></button>
            </div>
            <div class="modal-body">
                <form action="/user/update-password?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="Email" class="form-control-label">Enter your email</label>
                        <input id="Email" type="text" name="password" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="password" class="form-control-label">New Password</label>
                        <input id="confirmPassword" type="password" name="confirmPassword" class="form-control">
                        <span id='message'></span>
                    </div>
                    <button id="button" class="btn btn-primary btn-block" onclick="alertfucn()">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#Open-login").click(function () {
            $(".backdrop").fadeTo(200, 1);
        });
        $("#Close-login").click(function () {
            $(".backdrop").fadeOut(200);
        });
    });
</script>
<script>
    function alertfucn() {
        alert("Password changed !")
    }

    $(document).ready(function () {
        $("#Open-register").click(function () {
            $(".backdrop2").fadeTo(200, 1);
        });
        $("#Close-register").click(function () {
            $(".backdrop2").fadeOut(200);
        });
    });
</script>
